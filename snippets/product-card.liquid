<div class="mmc-loop-item">
    <div class="mmc-product-card">
      <a href="{{ product.url }}" class="mmc-card-image" style="padding-bottom: 150.15015015015015%;">
        <img
        srcset="{%- if product.featured_image.src.width >= 165 -%}{{ product.featured_image.src | image_url: width: 165 }} 165w,{%- endif -%}
          {%- if product.featured_image.src.width >= 360 -%}{{ product.featured_image.src | image_url: width: 360 }} 360w,{%- endif -%}
          {%- if product.featured_image.src.width >= 533 -%}{{ product.featured_image.src | image_url: width: 533 }} 533w,{%- endif -%}
          {%- if product.featured_image.src.width >= 720 -%}{{ product.featured_image.src | image_url: width: 720 }} 720w,{%- endif -%}
          {%- if product.featured_image.src.width >= 1000 -%}{{ product.featured_image.src | image_url: width: 1000 }} 1000w,{%- endif -%}
          {%- if product.featured_image.src.width >= 1500 -%}{{ product.featured_image.src | image_url: width: 1500 }} 1500w,{%- endif -%}
          {{ product.featured_image.src | image_url }} {{ product.featured_image.src.width }}w"
        src="{{ product.featured_image.src | image_url: width: 533 }}"
        sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
        alt="{{ product.title | escape }}"
        loading="lazy"
        width="{{ product.featured_image.width }}"
        height="{{ product.featured_image.height }}"
      >
      </a>
      <div class="mmc-card-info">
        <a href="{{ product.url }}" class="mmc-card-title">{{ product.title }}</a>
        <div class="mmc-card-price">
          <span class="mmc-price-regular">{{ product.price_max | money }}</span>
        </div>
      </div>
    </div>
    <a href="#" class="mmc-card-buy_button">ADD TO CART</a>
  </div>
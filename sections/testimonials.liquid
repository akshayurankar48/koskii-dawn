{% style %}
.testimony__wrapper{
    padding: 30px;
}
.testimony__main{
    display: flex;
    padding: 20px;
    background: #FBFBFB;
    margin-bottom: 20px;
    flex-direction: column;
}
.testimony__flex{
    margin-top: 20px;
}
.testimony__image_wrapper{
    position: relative;
    width: 100px;
    height: 100px;
    margin: 0px auto;
}
.testimony__image{
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
}
.testimony__text{
    padding-top: 20px;
    text-align: center;
}
.testimony__text_name{
    font-weight: bold;
    text-align: center;
}
.testimony__star{
    display: flex;
    justify-content: center;
    margin-top: 20px;
}
.testimony__star svg{
    height:10px;
}
@media screen and (min-width: 768px){
    .testimony__flex{
        flex-direction: row;
    }
    .testimony__main{
        margin-right: 20px;
        width: 33.33%;
    }
}
{% endstyle %}
<div class="testimony__wrapper page-width" >
    <h2>See what our customer say about us</h2>
    <div class="testimony__flex" data-flickity='{ "pageDots":true , "prevNextButtons": false, "cellAlign": "center", "contain": true,  "fullscreen": true,"fade": true, "wrapAround": true }'>
        {% for block in section.blocks %}
            <div class="testimony__main">
                <div class="testimony__image_wrapper" >
                    <img class="testimony__image" src="{{ block.settings.image | image_url }}" />
                </div>
                <div class="testimony__content">
                    <div class="testimony__star">
                        {% for x in (1..block.settings.star) %}
                        {% render 'icon-star' %}
                        {% endfor %}
                    </div>
                    <div class="testimony__text" >
                        {{ block.settings.paragraph }}
                    </div>
                    <div class="testimony__text_name" >
                        ~ {{ block.settings.name }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% schema %}
{
    "name":"Testimony",
    "class":"section",
    "blocks":[
        {
            "name":"Testimony",
            "type":"testimony",
            "settings":[
                {
                    "type":"image_picker",
                    "id":"image",
                    "label":"Image"
                },
                {
                    "type": "range",
                    "id": "star",
                    "label": "Star",
                    "min": 1,
                    "max": 5,
                    "step": 1,
                    "default": 5
                },
                {
                    "type":"text",
                    "id":"name",
                    "label":"Name"
                },
                {
                    "type":"text",
                    "id":"paragraph",
                    "label":"Paragraph"
                }
            ]
        }
    ],
    "presets":[
        {
            "name":"Testimony"
        }
    ]
}
{% endschema %}
{% style %}
*{
    padding: 0;
    margin: 0;
}
  .container{
      display: flex;
      justify-content: center;
      align-items: center;
      height: 40px;
}
.text--{{section.id}}
{
   color:{{section.settings.announcement_color}};
   font-size: 12px;
}
.color--{{section.id}}
{
   background-color:{{section.settings.announcement_background_color}};
}
{% endstyle %}

<div class="announcement-bar-container color--{{section.id}}">
   <div class="container">
      <div class="text text--{{section.id}}">{{section.settings.announcement}}</div>
   </div>
</div>
{% schema %}
{
"name":"announcement-bar",
"settings":[
{
"type":"header",
"content":"Content Settings"
},
{
"type":"richtext",
"id":"announcement",
"label":"Announcement"
},
{
"type":"color",
"id":"announcement_color",
"label":"Text Color",
"default": "#000"
},
{
"type": "color",
"id": "announcement_background_color",
"label": "Background Color",
"default": "#000"
}
]
}
{% endschema %}
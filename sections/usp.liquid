{% style %}
  .usp-container__flex {
    display:flex;
    flex-direction: column;
  }
  .flexitem-icon svg{
    width:40px;
    height:60px;
    text-align:center;
  }
  .usp-container__flexitem {
    align-items: center;
    margin: 10px auto;
    padding: 0px 30px;
  }
  .flexitem-text{
    margin:0 15px;
    text-align:left;
  }
  .flex{
    display:flex;

  }
  .usp-container{
    padding:30px 0px;
    
  }

  @media screen and (min-width: 768px){
    .usp-container__flexitem {
      width:70%;
      flex-direction:column;
      align-items:center;
      margin:0px auto;
      padding: 0px 30px;
    }
    .flexitem-text{
      margin:0 15px;
      text-align:center;
    }
    .usp-container__flex {
      flex-direction: row;
    }
    .usp-container__flexitem {
      width:33.33%;
    }
  }

{% endstyle %}


